<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="8.0dip"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/remove_area"
                android:layout_width="fill_parent"
                android:layout_height="24.0dip"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@id/block_area"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_title_blockname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="16.0dip"
                android:textColor="@color/color_primary"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@id/ti_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginRight="16.0dip"
                android:importantForAutofill="noExcludeDescendants">

                <EditText
                    android:id="@id/ed_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:lines="1"
                    android:textSize="13.0sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/bg_rectangle_white"
                android:orientation="vertical">

                <TextView
                    android:id="@id/tv_title_select_mb_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginRight="8.0dip"
                    android:text="Select Moreblock type"
                    android:textColor="@color/color_primary"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@id/radio_mb_type"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="6.0dip">

                        <RadioButton
                            android:id="@id/radio_mb_type_void"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Void" />

                        <RadioButton
                            android:id="@id/radio_mb_type_string"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="String" />

                        <RadioButton
                            android:id="@id/radio_mb_type_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Number" />

                        <RadioButton
                            android:id="@id/radio_mb_type_boolean"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Boolean" />

                        <RadioButton
                            android:id="@id/radio_mb_type_map"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map" />

                        <RadioButton
                            android:id="@id/radio_mb_type_liststring"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="List String" />

                        <RadioButton
                            android:id="@id/radio_mb_type_listmap"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="List Map" />

                        <RadioButton
                            android:id="@id/radio_mb_type_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View" />
                    </RadioGroup>
                </HorizontalScrollView>

                <TextView
                    android:id="@id/tv_title_add_variable"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="4.0dip"
                    android:layout_marginRight="8.0dip"
                    android:textColor="@color/color_primary"
                    android:textSize="14.0sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:orientation="vertical"
                    android:paddingHorizontal="16.0dip"
                    android:paddingLeft="16.0dip"
                    android:paddingRight="16.0dip">

                    <LinearLayout
                        android:id="@id/var_type_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_outline"
                        android:orientation="vertical"
                        android:paddingLeft="8.0dip"
                        android:paddingRight="8.0dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@id/ti_variable_name"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8.0dip"
                            android:layout_weight="1.0"
                            android:importantForAutofill="noExcludeDescendants">

                            <EditText
                                android:id="@id/ed_variable_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:lines="1"
                                android:textSize="13.0sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@id/add_variable"
                            android:layout_width="wrap_content"
                            android:layout_height="48.0dip"
                            android:gravity="center"
                            android:padding="8.0dip"
                            android:textColor="#ffffffff"
                            android:textSize="12.0sp"
                            android:theme="@style/AppTheme.Button.Blue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:background="@drawable/bg_rectangle_white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="8.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginRight="16.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@id/ti_label"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:importantForAutofill="noExcludeDescendants">

                        <EditText
                            android:id="@id/ed_label"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:lines="1"
                            android:textSize="13.0sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@id/add_label"
                        android:layout_width="wrap_content"
                        android:layout_height="48.0dip"
                        android:gravity="center"
                        android:padding="8.0dip"
                        android:textColor="#ffffffff"
                        android:textSize="12.0sp"
                        android:theme="@style/AppTheme.Button.Blue" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="4.0dip"
                android:layout_marginRight="8.0dip"
                android:text="Custom parameter"
                android:textColor="@color/color_primary"
                android:textSize="14.0sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:background="@drawable/bg_rectangle_white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="8.0dip">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:layout_marginRight="16.0dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:importantForAutofill="noExcludeDescendants">

                        <EditText
                            android:id="@id/parameter"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="parameter (without %)"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:lines="1"
                            android:textSize="13.0sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8.0dip"
                        android:layout_weight="1.0"
                        android:importantForAutofill="noExcludeDescendants">

                        <EditText
                            android:id="@id/name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="name"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:lines="1"
                            android:textSize="13.0sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="48.0dip"
                        android:gravity="center"
                        android:padding="8.0dip"
                        android:text="@string/block_add_list_int_head"
                        android:textColor="#ffffffff"
                        android:textSize="12.0sp"
                        android:theme="@style/AppTheme.Button.Blue" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>