<FrameLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/confirm_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_button_height">

        <TextView
            android:textColor="#ff757575"
            android:gravity="center"
            android:id="@id/confirm_title"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bg_outline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/confirm_yes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@id/confirm_yes_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_checkmark_green_48dp"
                    android:contentDescription="@null" />

                <TextView
                    android:textColor="#ff757575"
                    android:id="@id/confirm_yes_text"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/confirm_no"
                android:background="@drawable/bg_outline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@id/confirm_no_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/delete_96"
                    android:contentDescription="@null" />

                <TextView
                    android:textColor="#ff757575"
                    android:id="@id/confirm_no_text"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@id/project_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>