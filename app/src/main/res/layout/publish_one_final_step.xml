<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_stop_sign" />

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#ff212121"
                android:id="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <TextView
                android:textSize="12sp"
                android:textColor="#ff4d4d4d"
                android:id="@id/tv_title_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <TextView
                android:textSize="14sp"
                android:textColor="#ff212121"
                android:id="@id/tv_desc_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView
                android:textSize="14sp"
                android:textColor="#ff212121"
                android:id="@id/tv_desc_apk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@id/layout_sign_apk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_apk_color_96dp" />

                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:gravity="center"
                    android:id="@id/tv_title_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@id/layout_export_apk"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <androidx.cardview.widget.CardView
                    android:id="@id/card_made_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:elevation="4dp">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@id/img_export_apk"
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:src="@drawable/file_app_icon" />

                        <TextView
                            android:gravity="center"
                            android:id="@id/tv_app_name"
                            android:scrollbars="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:gravity="center"
                    android:id="@id/tv_title_export"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_folder_48dp" />

                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/scolor_black_01"
                        android:id="@id/tv_title_apk_path"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#ffffffff"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#ff4d4d4d"
                            android:layout_gravity="center_vertical"
                            android:id="@id/tv_apk_path"
                            android:padding="8dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:theme="@style/AppTheme.Button.CoolGreen"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/btn_docs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <Button
            android:theme="@style/AppTheme.Button.LightBlue"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@id/btn_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>