<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:background="#ffffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="4dp">

        <ScrollView
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ff2196f3"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:focusable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Listener" />

                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <EditText
                        android:textSize="16sp"
                        android:textColor="#ff000000"
                        android:textColorHint="#ff607d8b"
                        android:id="@id/name"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="name" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <EditText
                        android:textSize="16sp"
                        android:textColor="#ff000000"
                        android:textColorHint="#ff607d8b"
                        android:id="@id/customimport"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="custom import" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp">

                    <EditText
                        android:textSize="16sp"
                        android:textColor="#ff000000"
                        android:textColorHint="#ff607d8b"
                        android:id="@id/code"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Code (### => variable name)" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:textSize="16sp"
                    android:textColor="#ff616161"
                    android:gravity="center"
                    android:id="@id/separate"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Independent class/method" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#ff616161"
                            android:gravity="center"
                            android:id="@id/cancel"
                            android:padding="8dp"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cancel" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0">

                        <TextView
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#ff2196f3"
                            android:gravity="center"
                            android:id="@id/save"
                            android:padding="8dp"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Save" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>