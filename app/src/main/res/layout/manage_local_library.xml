<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nowhite_bg">

    <ListView
        android:id="@+id/list_local_librarys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/local_librarys_index"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/local_librarys_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_rounded_top_gray"
        android:gravity="center_horizontal"
        android:text="index: 10"
        android:textStyle="bold" />
    />
</RelativeLayout>
