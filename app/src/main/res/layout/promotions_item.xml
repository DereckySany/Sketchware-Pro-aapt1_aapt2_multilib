<LinearLayout android:orientation="vertical"
    android:background="@drawable/bg_outline"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/layout_promotion"
        android:layout_width="280dp"
        android:layout_height="140dp">

        <ImageView
            android:id="@id/img_promotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:textSize="10sp"
            android:textColor="#ff000000"
            android:gravity="center"
            android:id="@id/tv_step"
            android:background="#829a9a9a"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/layout_promotion_bottom"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/scolor_black_01"
                android:ellipsize="end"
                android:id="@id/tv_promotion_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2" />

            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/scolor_black_01"
                android:id="@id/tv_period_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:id="@id/tv_progress_st"
                android:background="@drawable/bg_outline"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>