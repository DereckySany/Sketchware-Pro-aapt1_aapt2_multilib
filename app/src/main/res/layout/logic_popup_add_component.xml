<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@id/spn_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:spinnerMode="dialog"
            style="@style/Widget.AppCompat.DropDownItem.Spinner" />

        <TextView
            android:textSize="12sp"
            android:textStyle="italic"
            android:id="@id/tv_type_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="24dp" />

        <TextView
            android:textSize="12sp"
            android:textColor="#ffff0000"
            android:gravity="left"
            android:id="@id/tv_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@id/ti_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="24dp">

            <EditText
                android:textSize="16sp"
                android:id="@id/ed_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textSize="16sp"
            android:gravity="center|left"
            android:id="@id/tv_input_filename"
            android:paddingLeft="24dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@id/ti_input_filename"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <EditText
                android:textSize="16sp"
                android:id="@id/ed_input_filename"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textSize="16sp"
            android:gravity="center|left"
            android:id="@id/tv_input_firebase_path"
            android:paddingLeft="24dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:textSize="12sp"
            android:textStyle="italic"
            android:id="@id/tv_desc_firebase_path"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@id/ti_input_firebase_path"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">

            <EditText
                android:textSize="16sp"
                android:id="@id/ed_input_firebase_path"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>