<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/layout_drawer"
    android:background="@color/white_bg"
    android:layout_width="150.0dip"
    android:layout_height="fill_parent"
    android:layout_marginTop="@dimen/action_bar_height"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@id/new_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1.0dip">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginBottom="4.0dip"
                android:src="@drawable/side_menu_block_icon_over" />
            <TextView
                android:textSize="12.0sp"
                android:textStyle="bold"
                android:textColor="@color/color_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Tools" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="12.0sp"
        android:textStyle="bold"
        android:textColor="@color/scolor_red_01"
        android:gravity="center"
        android:id="@id/tv_block_collection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:layout_marginStart="4.0dip"
        android:layout_marginEnd="4.0dip" />
    <com.besome.sketch.lib.ui.CustomScrollView
        android:id="@id/scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:orientation="vertical"
            android:id="@id/layout_favorite"
            android:padding="12.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </com.besome.sketch.lib.ui.CustomScrollView>
</LinearLayout>