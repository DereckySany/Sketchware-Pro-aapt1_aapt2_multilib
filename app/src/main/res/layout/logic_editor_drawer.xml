<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/layout_drawer"
    android:layout_width="155.0dip"
    android:layout_height="fill_parent"
    android:layout_marginTop="@dimen/action_bar_height"
    android:background="@color/white_bg"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@id/new_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8.0dip">

            <ImageView
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_marginBottom="4.0dip"
                android:src="@drawable/side_menu_block_icon_over" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer Tools"
                android:textColor="@color/color_primary"
                android:textSize="12.0sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_block_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4.0dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginEnd="4.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/scolor_red_01"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/sort_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4.0dip"
            android:background="@color/white_bg"
            android:src="@drawable/selector_ic_expand_more_24" />
    </LinearLayout>

    <com.besome.sketch.lib.ui.CustomScrollView
        android:id="@id/scv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:id="@id/layout_favorite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12.0dip" />
    </com.besome.sketch.lib.ui.CustomScrollView>
</LinearLayout>