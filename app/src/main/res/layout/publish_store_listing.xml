<LinearLayout android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_title" />

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff4d4d4d"
            android:layout_gravity="center_vertical"
            android:id="@id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="12sp"
            android:textColor="#ff4d4d4d"
            android:layout_gravity="bottom"
            android:id="@id/tv_name_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true">

        <EditText
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:id="@id/ed_input_name"
            android:background="@drawable/bg_round_light_grey"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone" />
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_short_desc" />

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff4d4d4d"
            android:id="@id/tv_title_short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="12sp"
            android:textColor="#ff4d4d4d"
            android:layout_gravity="bottom"
            android:id="@id/tv_short_desc_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true">

        <EditText
            android:textSize="14sp"
            android:gravity="top"
            android:id="@id/ed_input_short_desc"
            android:background="@drawable/bg_round_light_grey"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone" />
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_full_desc" />

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff4d4d4d"
            android:id="@id/tv_title_full_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <TextView
            android:textSize="12sp"
            android:textColor="#ff4d4d4d"
            android:layout_gravity="bottom"
            android:id="@id/tv_full_desc_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:fillViewport="true">

        <EditText
            android:textSize="14sp"
            android:gravity="top"
            android:id="@id/ed_input_full_desc"
            android:background="@drawable/bg_round_light_grey"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone" />
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_youtube" />

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff4d4d4d"
            android:id="@id/tv_title_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@id/img_play_video"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circled_play_96_blue" />
    </LinearLayout>

    <EditText
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:id="@id/ed_input_video"
        android:background="@drawable/bg_round_light_grey"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone" />
</LinearLayout>