<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white"
        android:elevation="1px"
        android:padding="@dimen/mtrl_btn_icon_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mtrl_btn_icon_padding"
            android:src="@drawable/package_96" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/mtrl_btn_icon_padding">

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="Google Mavem"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/url_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="https://repo1.maven.org/maven2/" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/expand_button_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:paddingLeft="@dimen/mtrl_btn_icon_padding"
            android:src="@drawable/selector_ic_expand_more_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expand_options_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_rounded_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/padding_edit_view"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/expand_options_view_delete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_gray"
            android:padding="@dimen/padding_edit_view"
            android:src="@drawable/ic_delete_white_24dp" />

        <ImageButton
            android:id="@+id/expand_options_view_edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_gray"
            android:padding="@dimen/padding_edit_view"
            android:paddingRight="118dp"
            android:src="@drawable/edit_white_48" />
    </LinearLayout>

</LinearLayout>