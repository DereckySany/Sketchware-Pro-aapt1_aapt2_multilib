<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/layout_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <View
                android:id="@id/view_leftline"
                android:background="@color/color_primary"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1.0" />

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:background="@drawable/circle_bg"
                    android:padding="8dp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null" />

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ffffffff"
                    android:gravity="center"
                    android:id="@id/tv_step_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <View
                android:id="@id/view_rightline"
                android:background="#ffeeeeee"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1.0" />
        </LinearLayout>

        <TextView
            android:textSize="12sp"
            android:textColor="@color/color_primary"
            android:gravity="center"
            android:id="@id/tv_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ff4d4d4d"
            android:gravity="center"
            android:id="@id/tv_step_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />

    <Button
        android:theme="@style/AppTheme.Button.LightBlue"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:id="@id/btn_complete"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <Button
        android:theme="@style/AppTheme.Button.Green"
        android:textSize="@dimen/text_size_button_material"
        android:textColor="#ffffffff"
        android:id="@id/btn_doc"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp" />
</LinearLayout>