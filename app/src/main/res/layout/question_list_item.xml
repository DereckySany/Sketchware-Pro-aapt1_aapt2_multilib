<LinearLayout android:orientation="vertical"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@id/layout_vote"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/scolor_black_02"
                android:gravity="center"
                android:id="@id/tv_vote_cnt"
                android:background="@drawable/circle_bg_white_outline_light_pink"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:textSize="11sp"
                android:textColor="@color/scolor_black_02"
                android:id="@id/tv_vote_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@id/layout_answer"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/scolor_black_02"
                android:gravity="center"
                android:id="@id/tv_answer_cnt"
                android:background="@drawable/circle_bg_white_outline_pink"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:textSize="11sp"
                android:textColor="@color/scolor_black_02"
                android:id="@id/tv_answer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/light_grey"
                android:layout_gravity="right"
                android:id="@id/tv_reg_dt"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:textColor="@color/scolor_black_02"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:id="@id/tv_question"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:singleLine="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>