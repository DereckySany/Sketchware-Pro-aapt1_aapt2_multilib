<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/img_down1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#fff6f6f6"
            android:padding="8dp"
            android:src="@drawable/selector_ic_chevron_left_grey_48" />

        <TextView
            android:id="@id/tv_version1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@color/scolor_blue_01"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@id/img_up1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="#fff6f6f6"
            android:padding="8dp"
            android:src="@drawable/selector_ic_chevron_right_grey_48" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/img_down2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:background="#fff6f6f6"
            android:padding="8dp"
            android:src="@drawable/selector_ic_chevron_left_grey_48" />

        <TextView
            android:id="@id/tv_version2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@color/scolor_blue_01"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="18dp" />

        <ImageView
            android:id="@id/img_up2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="#fff6f6f6"
            android:padding="8dp"
            android:src="@drawable/selector_ic_chevron_right_grey_48" />
    </LinearLayout>
</LinearLayout>