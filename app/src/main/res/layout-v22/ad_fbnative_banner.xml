<LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="64dp" android:layout_margin="2dp"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <View android:background="#ffcccccc" android:layout_width="match_parent" android:layout_height="0.70000005dip" />
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="63dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/ad_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:id="@id/ad_icon" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="4dp" android:layout_marginTop="4dp" android:layout_marginRight="4dp" android:layout_marginBottom="4dp" android:scaleType="fitCenter" android:layout_marginHorizontal="4dp" android:layout_marginVertical="4dp" />
            <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.0">
                <TextView android:textSize="14sp" android:textColor="#ff404040" android:id="@id/ad_title" android:layout_width="match_parent" android:layout_height="wrap_content" />
                <TextView android:textSize="12sp" android:textColor="#ff838383" android:id="@id/ad_social" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" />
            </LinearLayout>
            <LinearLayout android:gravity="center|right" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp">
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="20dp">
                    <TextView android:textSize="10sp" android:textColor="#ff7d7d7d" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="Sponsored" />
                    <LinearLayout android:gravity="center|right" android:orientation="horizontal" android:id="@id/ad_choice" android:layout_width="20dp" android:layout_height="20dp" />
                </LinearLayout>
                <Button android:textSize="12sp" android:textColor="@color/color_secondary" android:id="@id/ad_btn" android:background="@drawable/bg_outline" android:paddingLeft="4dp" android:paddingRight="4dp" android:layout_width="wrap_content" android:layout_height="28dp" android:text="Install" android:lines="1" android:paddingHorizontal="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>