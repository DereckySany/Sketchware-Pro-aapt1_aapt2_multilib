<ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:orientation="vertical" android:id="@id/rg_type" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginHorizontal="8dp">
            <RadioButton android:id="@id/rb_boolean" android:layout_width="match_parent" android:layout_height="40dp" />
            <RadioButton android:id="@id/rb_int" android:layout_width="match_parent" android:layout_height="40dp" android:checked="true" />
            <RadioButton android:id="@id/rb_string" android:layout_width="match_parent" android:layout_height="40dp" />
            <RadioButton android:id="@id/rb_map" android:layout_width="match_parent" android:layout_height="40dp" />
        </RadioGroup>
        <com.google.android.material.textfield.TextInputLayout android:id="@id/ti_input" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginHorizontal="8dp" android:importantForAutofill="noExcludeDescendants">
            <EditText android:textSize="16sp" android:id="@id/ed_input" android:layout_width="match_parent" android:layout_height="40dp" android:lines="1" android:inputType="text" android:imeOptions="actionDone" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
</ScrollView>