<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/layout_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@id/tv_vote_cnt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_bg_white_outline_light_pink"
                android:gravity="center"
                android:textColor="@color/scolor_black_02"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/tv_vote_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/scolor_black_02"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@id/tv_answer_cnt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle_bg_white_outline_pink"
                android:gravity="center"
                android:textColor="@color/scolor_black_02"
                android:textSize="14sp" />

            <TextView
                android:id="@id/tv_answer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/scolor_black_02"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@id/tv_reg_dt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/light_grey"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="false"
                android:textColor="@color/scolor_black_02"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>